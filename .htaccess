# Force correct content-type
AddType text/html .html

# Security headers (sudah kamu pakai sebelumnya)
<IfModule mod_headers.c>
  Header always set X-Frame-Options "DENY"
  Header always set X-Content-Type-Options "nosniff"
  Header always set Referrer-Policy "no-referrer"
  Header always set Permissions-Policy "geolocation=(), camera=(), microphone=()"
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
  Header set Content-Security-Policy "default-src 'self'; style-src 'self' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src https://fonts.gstatic.com; script-src 'self' https://cdnjs.cloudflare.com;"
</IfModule>

# Encoding
AddDefaultCharset UTF-8
